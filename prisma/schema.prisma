generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  password       String?
  name           String?
  role           String   @default("BUYER")
  avatar_url     String?
  is_2fa_enabled Boolean  @default(true)
  createdAt      DateTime @default(now())
}

model Email2FACode {
  email       String   @id
  code        String
  expires_at DateTime
}
